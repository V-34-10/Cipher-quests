<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_dialog_lose"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/background_lose_dialog_find_game"
        android:contentDescription="@string/failed_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/button_back_find"
        android:clickable="true"
        android:contentDescription="@string/button_next_dialog"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/background_dialog_lose"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_continue_find"
        android:clickable="true"
        android:contentDescription="@string/button_next_dialog"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_exit" />

</androidx.constraintlayout.widget.ConstraintLayout>