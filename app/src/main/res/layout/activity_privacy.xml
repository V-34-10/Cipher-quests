<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_privacy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_privacy"
    tools:context=".ui.privacy.PrivacyActivity">

    <TextView
        android:id="@+id/text_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/bayon"
        android:text="@string/text_read_privacy"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp35"
        app:layout_constraintBottom_toTopOf="@+id/button_accept_privacy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/button_accept_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_accept"
        android:clickable="true"
        android:contentDescription="@string/button_accept_privacy"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>